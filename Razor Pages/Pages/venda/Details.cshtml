@page
@model Razor_Pages.Pages.venda.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.FormaDePagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.FormaDePagamento)
        </dd>
        <dt class="col-sm-2">
            Valor Total
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAmount.ToString("C")
        </dd>
    </dl>
</div>

<div>
    <h4>Itens Vendidos</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Venda.ItensVendidos)
            {
                var totalPorItem = item.Produto.Preco * item.Quantidade;
                <tr>
                    <td>@item.Produto.Nome</td>
                    <td>@item.Quantidade</td>
                    <td>@item.Produto.Preco.ToString("C")</td>
                    <td>@totalPorItem.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Venda.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
